# Server Configuration
NODE_ENV=development
PORT=9000

# Client Configuration
CLIENT_URL=http://localhost:5173

# Database Configuration
# For local Docker development: mongodb://localhost:27017/trvl-services
# For MongoDB Atlas: use your connection string
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/trvl-services

# Feature Flags
# Set to 'true' to skip external services for local development
MOCK_CLOUDINARY=false
MOCK_STRIPE=false

# JWT Configuration
JWT_SECRET_KEY=dev_secret
JWT_REFRESH_SECRET_KEY=dev_refresh_secret

# Cloudinary Configuration (optional - set MOCK_CLOUDINARY=true to skip)
# Free tier: https://cloudinary.com/users/register/free
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Stripe Configuration (optional - set MOCK_STRIPE=true to skip)
# Test keys: https://dashboard.stripe.com/test/apikeys
STRIPE_API_KEY=sk_test_
